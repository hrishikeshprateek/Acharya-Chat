<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/amita_bold"
                android:text="Register to Acharya Chat"
                android:textColor="#ffff"
                android:textSize="26sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/button_background"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_account_circle_24"
                    android:hint="Your name"
                    android:background="@drawable/button_background"
                    android:textColor="#1B1A1A"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="15dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/button_background"
                android:layout_marginHorizontal="15dp">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_alternate_email_24"
                    android:hint="Acharya mail-id"
                    android:background="@drawable/button_background"

                    android:textColor="#1B1A1A"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/button_background"
                android:layout_marginHorizontal="15dp">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:hint="Set your Password"
                    android:inputType="textPassword"
                    android:background="@drawable/button_background"
                    android:textColor="#1B1A1A"
                    android:drawablePadding="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/button_background"
                android:layout_marginHorizontal="15dp">
                <EditText
                    android:id="@+id/password_re_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:hint="Re-enter your Password"
                    android:inputType="textPassword"
                    android:background="@drawable/button_background"
                    android:textColor="#1B1A1A"
                    android:drawablePadding="15dp"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Password that will instantly log you in"
                android:drawableStart="@drawable/ic_outline_info_24"
                android:drawableTint="#CDDC39"
                android:drawablePadding="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:textColor="#CDDC39"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_btn_s"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/curved_button_background"
                android:layout_marginHorizontal="15dp"
                android:text="REGISTER"
                android:textColor="#ffff"
                android:layout_marginTop="20dp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:text="OR"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_page"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@id/or"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:orientation="vertical"
                android:text="Already have a account ? "
                android:textColor="#323030" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>